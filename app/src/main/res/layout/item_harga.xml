<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/info_null"
        android:text="DATA TIDAK TERSEDIA"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tv_name"
        android:text="PENYEDIA JASA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_strip"
        android:text="LAYANAN"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_9sdp" />

    <TextView
        android:id="@+id/tv_code"
        android:text="Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/_9sdp"
        android:layout_below="@id/tv_name"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_code"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_value"
        android:text="HARGA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:textColor="@color/orange1" />

    <TextView
        android:id="@+id/tv_etd"
        android:text="LAMA PENGIRIMAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/_10sdp"
        android:layout_below="@+id/tv_value"
        />

    <View
        android:id="@+id/view"
        android:layout_below="@id/tv_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="#EDEDED" />

</RelativeLayout>